<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Panel
        id="form01Panel"
        headerText="{i18n>panelFrTitle}"
        class="sapUiResponsiveMargin"
        width="50%">

        <f:SimpleForm
            id="form"
            editable="true"
            layout="ResponsiveGridLayout">

            <Label
                id="formLabel"
                text="{i18n>formLabel}"
                labelFor="formInput" />

            <Input
                id="formInput"
                placeholder="{i18n>formPlaceholder}" />

        </f:SimpleForm>

    </Panel>

</core:FragmentDefinition>