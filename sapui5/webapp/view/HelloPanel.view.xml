<mvc:View
    id="helloPanelView"
    controllerName="logalilaboratorio.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Panel
        id="helloPanel"
        headerText="{i18n>panelHeader}"
        width="auto"
    >
        <content>
            <VBox id="vboxMain" >
                <Text
                    id="textHello"
                    text="Hello {/recipient/name}"
                    class="sapUiSmallMarginTop boldElements"
                />

                <Input
                    id="inputName"
                    value="{/recipient/name}"
                    valueLiveUpdate="true"
                    width="60%"
                />

                <Button
                    id="btnSayHello"
                    text="{i18n>buttonSayHello}"
                    press=".onShowHello"
                    class="sapUiSmallMarginTop"
                />

                <Button
                    id="btnOpenDialog"
                    text="{i18n>openDialog}"
                    icon="sap-icon://action"
                    press=".onOpenDialog"
                    class="sapUiSmallMarginTop"
                />
            </VBox>
        </content>
    </Panel>

    <core:Fragment
        id="form01Fragment"
        fragmentName="logalilaboratorio.sapui5.view.Form01"
        type="XML"
    />
</mvc:View>
